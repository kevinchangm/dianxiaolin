.container {
  padding-bottom: 120rpx;
}

/* 轮播图样式 */
.swiper {
  width: 100%;
  height: 500rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 基本信息样式 */
.info-section {
  padding: 30rpx;
  background: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.price {
  font-size: 40rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

/* 通用section样式 */
.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-title .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 位置信息样式 */
.location-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.location-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.distance {
  color: #999;
}

.map {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

/* 详细信息样式 */
.detail-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.detail-content {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.label {
  color: #666;
  width: 120rpx;
}

.value {
  color: #333;
}

/* 描述信息样式 */
.description-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 联系方式样式 */
.contact-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.contact-item .value {
  color: #1296db;
}

/* 底部操作栏样式 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 0 30rpx;
}

.action-buttons {
  display: flex;
  align-items: center;
  height: 100%;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  padding: 0;
  margin-right: 40rpx;
  line-height: 1;
}

.action-btn::after {
  display: none;
}

.action-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #666;
}

.primary-btn {
  margin-left: auto;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.primary-btn::after {
  display: none;
} 